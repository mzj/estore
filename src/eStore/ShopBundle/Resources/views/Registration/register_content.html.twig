{% form_theme form theme %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    <div>
                <span class="form-errors">{{ form_errors(form) }}</span>
                
                <span class="form-errors">{{ form_errors(form.firstName) }}</span>
                {{ form_widget(form.firstName, {'attr':{'class': 'signing-box-signup-input user-input-bg', 'placeholder': 'First Name'}}) }}
                <br /><br />   
                <span class="form-errors">{{ form_errors(form.lastName) }}</span>
                {{ form_widget(form.lastName, {'attr':{'class': 'signing-box-signup-input user-input-bg', 'placeholder': 'Last Name'}}) }}
                <br /><br />  
                <span class="form-errors">{{ form_errors(form.username) }}</span>
                {{ form_widget(form.username, {'attr':{'class': 'signing-box-signup-input user-input-bg', 'placeholder': 'Username'}}) }}
                <br /><br />
                <span class="form-errors">{{ form_errors(form.email) }}</span>
                {{ form_widget(form.email, {'attr':{'class': 'signing-box-signup-input mail-input-bg', 'placeholder': 'Email'}}) }}
                <br /><br />
                <span class="form-errors">{{ form_errors(form.plainPassword) }}</span>
                {{ form_widget(form.plainPassword.first, {'attr' : {'class' : 'signing-box-signup-input lock-input-bg', 'placeholder': 'Password'} }) }}
                <br /><br />
                {{ form_widget(form.plainPassword.second, {'attr' : {'class' : 'signing-box-signup-input lock-input-bg', 'placeholder': 'Confirm Password'} }) }}
                <br /><br />   
                {{ form_rest(form) }}
     </div>
        <input type="submit" value="Sign Up" />
    </div>
</form>