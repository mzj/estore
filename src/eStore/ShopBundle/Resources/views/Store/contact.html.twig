{% extends 'eStoreShopBundle::layout.html.twig' %}

{% block title %}Contact{% endblock%}

{%block main %}

    {% if app.session.hasFlash('estore-notice') %}
        <div class="estore-notice">
            {{ app.session.flash('estore-notice') }}
        </div>
    {% endif %}
    <p><h2 class="contact-title">Contact eStore</h2></p>

    <form action="{{ path('eStoreShopBundle_contact') }}" method="post" {{ form_enctype(form) }} class="estore">
        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}

        {{ form_rest(form) }}

        <input type="submit" value="Contact" />
    </form>

{% endblock %}